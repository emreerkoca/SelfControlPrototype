@model Word
@{
    ViewData["Title"] = "Word";
}
<h3>@ViewData["Message"]</h3>

<form asp-action="AddWord" asp-controller="Home" class="form form-horizontal" method="post">
    <div class="edit-items center-block">
        <div class="col-md-6 col-xs-12">
            <div class="col-md-6 col-xs-12">
                <label asp-for="OriginalWord">Original Word</label>
            </div>
            <div class="col-md-6 col-xs-12">
                <input asp-for="OriginalWord" id="OriginalWord" />
            </div>
            <div class="col-md-6">
                <label asp-for="TranslatedWord">Translated Word</label>
            </div>
            <div class="col-md-6">
                <input asp-for="TranslatedWord" id="TranslatedWord" />
            </div>
            <div class="col-md-6">
                <label asp-for="Sentence">Sentence</label>
            </div>
            <div class="col-md-6">
                <textarea asp-for="Sentence" id="Sentence" rows="4" maxlength="140"></textarea>
            </div>
            <div class="col-lg-offset-6 col-md-6">
                <button type="submit" class="custom-button put-it-right">Add</button>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</form>
